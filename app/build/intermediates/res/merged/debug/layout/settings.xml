<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/new_backgr_low_border"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="20" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="28dp"
        android:layout_weight="17"
        android:gravity="top"
        android:orientation="vertical" >

   		<ScrollView
        android:layout_width="fill_parent"        
        android:gravity="top"
        android:layout_height="fill_parent">
    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"            
            android:orientation="vertical" >
	    
             <ImageView
                 android:id="@+id/background_logo"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="4dp"
                 android:adjustViewBounds="true"
                 android:src="@drawable/background_logo" />
            
		<TextView
		    android:id="@+id/settingstext"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center|center_horizontal"		    
		    android:gravity="center"
		    android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
		    android:text="@string/btn_settings"
		    android:textColor="@color/white"
		    android:textSize="21sp" />
				
			<CheckBox
			    android:id="@+id/cbSoundEffects"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:layout_marginLeft="30dp"
            	android:layout_marginRight="30dp"
			    android:layout_marginTop="10dip"
			    android:text="@string/sett_sounds"
			    android:textColor="@color/white" />
			
			<CheckBox
			    android:id="@+id/cbVibrations"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:layout_marginLeft="30dp"
            	android:layout_marginRight="30dp"
			    android:text="@string/sett_vibrations"
			    android:textColor="@color/white" />
			
			<CheckBox
			    android:id="@+id/cbNotifications"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:layout_marginLeft="30dp"
            	android:layout_marginRight="30dp"
			    android:text="@string/sett_notifications"
			    android:textColor="@color/white" />
			
			<CheckBox
			    android:id="@+id/cbRandom"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:layout_marginLeft="30dp"
            	android:layout_marginRight="30dp"
			    android:text="@string/sett_random"
			    android:textColor="@color/white" />

			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="14dp"
			    android:orientation="horizontal" >
			
			<TextView
			    android:id="@+id/textBackground"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"			    
			    android:layout_marginTop="20dp"
			    android:layout_marginLeft="34dp"
            	android:layout_marginRight="30dp"
			    android:text="@string/map_colon"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
			
			<TextView
			    android:id="@+id/textStyle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:layout_marginLeft="38dp"
			    android:layout_marginTop="20dp"
			    android:text="@string/theme_colon"
			    android:textAppearance="?android:attr/textAppearanceMedium" />

			</LinearLayout>
			
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
            	android:layout_marginRight="24dp"
			    android:orientation="horizontal" >
				
			    <RadioGroup
			        android:id="@+id/themeGroup"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="3dp"
			        android:gravity="center"
			        android:orientation="vertical" >
			    			        
						<RadioButton
						    android:id="@+id/rb1"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center"
						    android:layout_margin="10dp"
						    android:checked="true"
						    android:text="" />
				
						<RadioButton
						    android:id="@+id/rb2"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center"
						    android:layout_margin="10dp"
						     />
											
						<RadioButton
						    android:id="@+id/rb3"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center"		
						    android:layout_margin="10dp"				    
						    android:text="" />
						
						<RadioButton
						    android:id="@+id/rb4"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center"
						    android:layout_margin="10dp"
						    android:text="" />
						
						<RadioButton
						    android:id="@+id/rb5"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center"
						    android:layout_margin="10dp"
						    android:text="" />
			
					</RadioGroup>
					
					<LinearLayout
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_gravity="center"
					    android:gravity="center"
					    android:orientation="vertical" >
										    
					    <ImageView
					        android:id="@+id/smallmap1"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:layout_margin="8dp"
					        android:src="@drawable/map_caribbean_mini" />
					    
					    <ImageView
					        android:id="@+id/smallmap2"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:layout_margin="8dp"
					        android:src="@drawable/map_swamp_mini" />
					    
					    <ImageView
					        android:id="@+id/smallmap3"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:layout_margin="8dp"
					        android:src="@drawable/map_polar_mini" />
					    
				    	<ImageView
				    	    android:id="@+id/smallmap4"
				    	    android:layout_width="50dp"
					        android:layout_height="50dp"
				    	    android:layout_margin="8dp"
				    	    android:src="@drawable/map_volcano_mini" />
				    	
				    	<ImageView
				    	    android:id="@+id/smallmap5"
				    	    android:layout_width="50dp"
					        android:layout_height="50dp"
				    	    android:layout_margin="8dp"
				    	    android:src="@drawable/map_poisoned_sea_mini" />					    
				    	
				    </LinearLayout>
					
					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginLeft="10dp"
					    android:layout_marginRight="30dp"
					    android:orientation="horizontal" >
					
					<RadioGroup
				        android:id="@+id/styleGroup"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:gravity="center"
				        android:orientation="vertical" >
					
					    <RadioButton
						    android:id="@+id/rbStyle1"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center"
						    android:layout_margin="10dp"
						    android:text="" />
					    
					    <RadioButton
						    android:id="@+id/rbStyle2"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center"
						    android:layout_margin="10dp"
						    android:text="" />
					    
					    <RadioButton
						    android:id="@+id/rbStyle3"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center"
						    android:layout_margin="10dp"
						    android:text="" />
					    
					    <RadioButton
						    android:id="@+id/rbStyle4"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_margin="10dp"
						    android:layout_gravity="center"
						    android:text="" />
					    
					</RadioGroup>
					
					<LinearLayout
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_gravity="center"
					    android:gravity="center"
					    android:orientation="vertical" >
										    
					    <ImageView
					        android:id="@+id/fire1"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:layout_margin="8dp"
					        android:src="@drawable/fire_on" />
					    
					    <ImageView
					        android:id="@+id/fire2"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:layout_margin="8dp"
					        android:src="@drawable/fire_on_black" />
					    
					    <ImageView
					        android:id="@+id/fire3"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:layout_margin="8dp"
					        android:src="@drawable/fire_on_white" />
					    
				    	<ImageView
				    	    android:id="@+id/fire4"
				    	    android:layout_width="50dp"
					        android:layout_height="50dp"
				    	    android:layout_margin="8dp"
				    	    android:src="@drawable/fire_on_brush" />
				    				    
				    	
				    </LinearLayout>
					</LinearLayout>
				</LinearLayout>
				</LinearLayout>
			
        	
			</ScrollView>
		</LinearLayout>
</LinearLayout>