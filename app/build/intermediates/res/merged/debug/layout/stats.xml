<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="15dp"
    android:background="@drawable/new_backgr_high_border_no_logo"
    android:gravity="bottom"
    android:id="@+id/RootView"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="top"
        android:layout_weight="13"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="21" >
       
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="vertical" >
            
			  <ScrollView
			      android:layout_width="fill_parent"
			      android:layout_height="fill_parent"
			      android:layout_gravity="top"
			      android:layout_weight="15"
			      android:gravity="bottom" >
		    
		        <LinearLayout 
		            android:layout_width="fill_parent"
		        	android:layout_height="fill_parent"
		        	android:orientation="vertical">
		    
		            <ImageView
			            android:id="@+id/background_logo"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginBottom="-20dp"
			            android:layout_marginLeft="15dp"
			            android:layout_marginRight="15dp"
			            android:layout_marginTop="22dp"
			            android:adjustViewBounds="true"
			            android:src="@drawable/background_logo" />
		            
				    <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal|right"
				        android:layout_marginLeft="15dip"
				        android:layout_marginTop="15dip"
				        android:layout_marginRight="15dip"
				        android:layout_marginBottom="10dip"
				        android:orientation="horizontal" >
		
				        <TextView
				            android:id="@+id/textPlayerStats"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:layout_gravity="right|bottom"
				            android:layout_marginLeft="10dip"
				            android:textColor="@color/white"
				            android:layout_weight="5"
				            android:gravity="center"
				            android:text="player stats"
				            android:textSize="21sp" />
				        
				    </LinearLayout>
		
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_gravity="right"
				        android:layout_marginLeft="18dip"
				        android:layout_marginRight="18dip"
				        android:layout_marginBottom="20dip"
				        android:orientation="horizontal" >
		
				        <TextView
				            android:id="@+id/tvRating"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:layout_gravity="left|right"           
				            android:textColor="@color/white" 
				            android:layout_weight="5"
				            android:text="@string/ratingcolon"
				            android:textSize="14dip" />
				
				        <TextView
				            android:id="@+id/tvRatingValue"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:textColor="@color/white"
				            android:gravity="right"            
				            android:layout_weight="2"
				            android:text="----"
				            android:textSize="20dip" />
		
		    		</LinearLayout>
		
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"        
				        android:layout_marginLeft="18dip"
				        android:layout_marginRight="18dip"
				        android:layout_marginBottom="20dip"
				        android:orientation="horizontal" >
				
				        <TextView
				            android:id="@+id/tvWon"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:layout_gravity="left"
				            android:textColor="@color/white"
				            android:layout_weight="5"
				            android:text="@string/gameswoncolon"
				            android:textSize="14dip" />
		
				        <TextView
				            android:id="@+id/tvWonValue"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:textColor="@color/white"
				            android:gravity="right"
				            android:layout_weight="2"
				            android:text="--"
				            android:textSize="20dip" />
				
				    </LinearLayout>
		
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"        
				        android:layout_marginLeft="18dip"
				        android:layout_marginRight="18dip"
				        android:layout_marginBottom="20dip"
				        android:orientation="horizontal" >
				
				        <TextView
				            android:id="@+id/tvLost"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:textColor="@color/white"
				            android:layout_gravity="left"
				            android:layout_weight="5"
				            android:text="@string/gameslostcolon"
				            android:textSize="14dip" />
		
				        <TextView
				            android:id="@+id/tvLostValue"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:textColor="@color/white"
				            android:gravity="right"
				            android:layout_weight="2"
				            android:text="--"
				            android:textSize="20dip" />
				
				    </LinearLayout>
		    
		    
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"        
				        android:layout_marginLeft="18dip"
				        android:layout_marginRight="18dip"
				        android:layout_marginBottom="20dip"
				        android:orientation="horizontal" >
				
				        <TextView
				            android:id="@+id/tvWorldRank"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:textColor="@color/white"
				            android:layout_gravity="left"
				            android:layout_weight="5"
				            android:text="@string/worldrankcolon"
				            android:textSize="14dip" />
				
				        <TextView
				            android:id="@+id/tvWorldRankValue"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:textColor="@color/white"
				            android:gravity="right"
				            android:layout_weight="2"
				            android:text="--"
				            android:textSize="20dip" />
				
				    </LinearLayout>
		    
		    
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"        
				        android:layout_marginLeft="18dip"
				        android:layout_marginRight="18dip"
				        android:layout_marginBottom="20dip"
				        android:orientation="horizontal" >
				
				        <TextView
				            android:id="@+id/tvNationalRank"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:textColor="@color/white"
				            android:layout_gravity="left"
				            android:layout_weight="5"
				            android:text="@string/nationalrankcolon"
				            android:textSize="14dip" />
				
				        <TextView
				            android:id="@+id/tvNationalRankValue"
				            android:layout_width="0dip"
				            android:layout_height="wrap_content"
				            android:textColor="@color/white"
				            android:gravity="right"
				            android:layout_weight="2"
				            android:text="--"
				            android:textSize="20dip" />
				
				    </LinearLayout>
		    </LinearLayout>
		</ScrollView>

</LinearLayout>
</LinearLayout>

    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="0dip"
       android:layout_weight="5"
       android:layout_marginBottom="10dip"
       android:gravity="bottom"
       android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"        
        android:gravity="center"
        android:orientation="horizontal" >    

        
    <FrameLayout
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"		    
		    android:gravity="bottom"
		    android:layout_marginRight="5dp"
		    android:orientation="vertical">
	    
	    <ImageButton
	        android:id="@+id/btnViewNationalTop"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:adjustViewBounds="true"
	        
	        android:scaleType="fitXY"	        
	        android:background="@drawable/top25"
	        android:gravity="left|center_vertical"/>
	    
	    <ImageView
	        android:id="@+id/landflag"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal|bottom"
	        android:layout_marginBottom="15dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/land_unknown" />
    
    </FrameLayout>

    <FrameLayout
		    android:layout_width="wrap_content"  
		    android:layout_height="wrap_content"		    
		    android:gravity="bottom"
		    android:orientation="vertical">
	    
	    <ImageButton
	        android:id="@+id/btnViewWorldTop"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:adjustViewBounds="true"
	        android:scaleType="fitXY"	        
	        android:background="@drawable/top25"
	        android:gravity="left|center_vertical"/>
	    
	    <ImageView
	        android:id="@+id/worldmap"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal|bottom"
	        android:layout_marginBottom="15dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/world" />
    
    </FrameLayout>
    
    </LinearLayout>
    </LinearLayout>
    
</LinearLayout>