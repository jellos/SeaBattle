<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:id="@+id/gamePickerRoot"
    tools:context=".JGamePicker"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/zwikLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="false"
        android:layout_margin="2dip"
        android:gravity="top"
        android:orientation="vertical"
         >

        <LinearLayout
            android:id="@+id/imageandgameslist"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="17"
            android:gravity="center"
            android:orientation="vertical" >
            
	        <ImageView
	            android:id="@+id/background_logo"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="-20dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            android:layout_marginTop="22dp"
	            android:adjustViewBounds="true"
	            android:src="@drawable/background_logo" />
	        
	        <LinearLayout 
	            android:layout_height="0dip"
	            android:layout_weight="5"
	            android:layout_width="fill_parent"
			    android:gravity="center"		
			    android:weightSum="20"	    
			    android:orientation="horizontal" >
	        
	            <LinearLayout 
		            android:layout_height="fill_parent"	            
		            android:layout_width="0dip"
		            android:layout_weight="17"
				    android:gravity="center"				      
				    android:orientation="vertical" >
	            
		        <ListView
		            android:id="@+id/lvGamesList"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_gravity="center_vertical"
		            android:cacheColorHint="#00000000"
		            android:scrollbars="vertical"
		            android:textSize="12sp" />
		        
		        </LinearLayout>
		    </LinearLayout>

	    </LinearLayout>
	        
        <LinearLayout
            android:id="@+id/knops"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="4"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/menu_menu"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/menu_menu"
                android:scaleType="fitXY" />
            
            <ImageButton
                android:id="@+id/ibtnNewgame"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/plus"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtnFindfriends"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/loep"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtnStats"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/stats"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtnSettings"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/settings"
                android:scaleType="fitXY" />
            
            <ImageButton
                android:id="@+id/ibtnRefresh"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/refresh"
                android:scaleType="fitXY" />
            
            <ImageView
	            android:id="@+id/nothing"
	            android:layout_width="27dp"
                android:layout_height="55dp"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
	            android:src="@drawable/nothing" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/empty"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/nothing2"
                android:layout_width="27dp"
                android:layout_height="55dp"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/nothing" />

        </LinearLayout>
        
     </LinearLayout>
    
</RelativeLayout>
 