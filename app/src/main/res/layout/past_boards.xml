<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="250dp"
    android:gravity="center_horizontal"    
    android:orientation="vertical"
    android:padding="17dp" >
        
   
    <ScrollView
        android:layout_width="fill_parent"        
        android:gravity="center_horizontal"
        android:layout_height="fill_parent">
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            
            <TextView
			    android:id="@+id/uppertext"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_margin="24dip"
			    android:layout_gravity="center|center_horizontal"    
			    android:text="fleet history:"
			    android:textColor="@color/white"
			    android:textSize="21dip" />
            
            <TextView
			    android:id="@+id/one"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center|center_horizontal"		    
			    android:text="1"
			    android:textColor="@color/white"
			    android:textSize="21dip" />
        
	        <com.kipsap.jshipbattle.SetupPlayField
			       android:id="@+id/past_field1" 
			       android:layout_margin="24dip"
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"/>
	        
	        <TextView
			    android:id="@+id/two"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center|center_horizontal"		    
			    android:text="2"
			    android:textColor="@color/white"
			    android:textSize="21dip" />
	        
	        <com.kipsap.jshipbattle.SetupPlayField
			       android:id="@+id/past_field2" 
			       android:layout_margin="24dip"
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"/>
	        
	        <TextView
			    android:id="@+id/three"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center|center_horizontal"		    
			    android:text="3"
			    android:textColor="@color/white"
			    android:textSize="21dip" />
	        
	        <com.kipsap.jshipbattle.SetupPlayField
			       android:id="@+id/past_field3" 
			       android:layout_margin="24dip"
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"/>
	        
	        <TextView
			    android:id="@+id/four"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center|center_horizontal"		    
			    android:text="4"
			    android:textColor="@color/white"
			    android:textSize="21dip" />
	        
	        <com.kipsap.jshipbattle.SetupPlayField
			       android:id="@+id/past_field4" 
			       android:layout_margin="24dip"
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"/>
	        
	        <TextView
			    android:id="@+id/five"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center|center_horizontal"		    
			    android:text="5"
			    android:textColor="@color/white"
			    android:textSize="21dip" />
	        
	        <com.kipsap.jshipbattle.SetupPlayField
			       android:id="@+id/past_field5" 
			       android:layout_margin="24dip"
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"/>
        
        </LinearLayout>
        
    </ScrollView>
    
 
</LinearLayout>