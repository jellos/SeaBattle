<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="20" >

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_gravity="top"
	    android:layout_marginLeft="34dp"
	    android:layout_marginRight="34dip"
	    android:layout_marginTop="34dp"
	    android:layout_weight="17"
	    android:gravity="top"
	    android:orientation="vertical" >
	    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/background_logo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-8dp"
                android:layout_marginRight="-8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/background_logo" />
            
		<TextView
		    android:id="@+id/shipbattlerules"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="15dip"
		    android:gravity="center"
		    android:text="@string/shipbattlerules"
		    android:layout_below="@id/background_logo"
		    android:textColor="@color/white"
		    android:textSize="22dip" />

		<TextView
		    android:id="@+id/rulestext1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="15dip"
		    android:text="@string/rules1"
		    android:textColor="@color/white"
		    android:layout_below="@id/shipbattlerules"
		    android:textSize="15dip" />
		
		<TextView
		    android:id="@+id/rulestext2"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="15dip"
		    android:text="@string/rules2"
		    android:textColor="@color/white"
		    android:layout_below="@+id/rulestext1"
		    android:textSize="15dip" />
		
		<TextView
		    android:id="@+id/aircraftcarrier"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left|center_vertical"
		    android:layout_marginRight="5dip"
		    android:gravity="left"
		    android:text="@string/oneaircraftcarrier"
		    android:textColor="@color/white"
		    android:layout_below="@+id/rulestext2"
		    android:textSize="15dip" />
		    
		<ImageView
		    android:id="@+id/ship5"
		    android:layout_width="140dp"
		    android:layout_height="30dp"
		    android:layout_alignRight="@id/rulestext1"
		    android:layout_below="@id/aircraftcarrier"
		    android:gravity="right"
		    android:scaleType="fitXY"
		    android:src="@drawable/b5_hor" />
		     
		<TextView
		    android:id="@+id/cruiser"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left|center_vertical"
		    android:layout_marginRight="5dip"
		    android:gravity="left"
		    android:text="@string/onecruiser"
		    android:textColor="@color/white"
		    android:layout_below="@id/ship5"
		    android:textSize="15dip" />

		<ImageView
		    android:id="@+id/ship4"
		    android:layout_width="124dp"
		    android:layout_height="30dp"
		    android:gravity="right"
		    android:scaleType="fitXY"
		    android:layout_below="@id/cruiser"
		    android:layout_alignRight="@id/rulestext1"
		    android:src="@drawable/b4_hor" />	    
		     
		<TextView
		    android:id="@+id/destroyer"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left|center_vertical"
		    android:layout_marginRight="5dip"
		    android:gravity="left"
		    android:text="@string/twodestroyers"
		    android:layout_below="@id/ship4"
		    android:textColor="@color/white"
		    android:textSize="15dip" />

		<ImageView
		    android:id="@+id/ship3"
		    android:layout_width="100dp"
		    android:layout_height="30dp"
		    android:gravity="right"
		    android:scaleType="fitXY"
		    android:layout_below="@id/destroyer"
		    android:layout_alignRight="@id/rulestext1"
		    android:src="@drawable/b3_hor" />
		    
		<TextView
		    android:id="@+id/submarine"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left|center_vertical"
		    android:layout_marginRight="5dip"
		    android:gravity="left"
		    android:text="@string/threesubmarines"
		    android:layout_below="@id/ship3"
		    android:textColor="@color/white"
		    android:textSize="15dip" />

		<ImageView
		    android:id="@+id/ship2"
		    android:layout_width="68dp"
		    android:layout_height="30dp"
		    android:gravity="right"
		    android:scaleType="fitXY"
		    android:layout_below="@id/submarine"
		    android:layout_alignRight="@id/rulestext1"
		    android:src="@drawable/b2_hor" />
		
		<TextView
		    android:id="@+id/rulestext3"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="15dip"
		    android:layout_marginTop="12dip"
		    android:layout_below="@id/ship2"
		    android:text="@string/rules3"
		    android:textColor="@color/white"
		    android:textSize="15dip" />
		
		<TextView
		    android:id="@+id/rulestext4"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="15dip"
		    android:layout_marginTop="12dip"
		    android:layout_below="@+id/rulestext3"
		    android:text="@string/rules4"
		    android:textColor="@color/white"
		    android:textSize="15dip" />
		
		<TextView
		    android:id="@+id/rulestext5"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="15dip"
		    android:layout_marginTop="12dip"
		    android:layout_below="@+id/rulestext4"
		    android:text="@string/rules5"
		    android:textColor="@color/white"
		    android:textSize="15dip" />

    </RelativeLayout>
    </ScrollView>
    </LinearLayout>
   </LinearLayout>