<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="500dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    >
 
    <ImageView
        android:id="@+id/imageWinLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/win" />
    
    <TextView
        android:id="@+id/textUitslag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="result"
        android:textColor="@color/white"
        android:textSize="20dip" />
        
    <TextView
        android:id="@+id/textScore"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="42dip"
        android:text="score" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >
    
	    <TextView
	        android:id="@+id/tvYourNewRating"
	        android:layout_width="0dip"
	        android:textColor="@color/white"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="8"
	        android:text="@string/yournewratingcolon"
	        android:textSize="15dip" />
	
	    <TextView
	        android:id="@+id/tvYourNewRatingVal"
	        android:layout_width="0dip"
	        android:layout_weight="7"
	        android:textColor="@color/white"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:textSize="24dip"
	        android:text="---- (+--)" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >
	    
	    <TextView
	        android:id="@+id/tvHisNewRating"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:textColor="@color/white"
	        android:layout_weight="8"
	        android:text="opp new rating:"
	        android:textSize="15dip" />
	    
	    <TextView
	        android:id="@+id/tvHisNewRatingVal"
	        android:layout_width="0dip"
	        android:layout_weight="7"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:gravity="right"
	        android:text="---- (+--)"
	        android:textSize="24dip" />
 
    </LinearLayout>
    
</LinearLayout>