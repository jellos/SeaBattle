<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_backgr_high_border_no_logo"
    tools:context=".JGamePicker"
    tools:ignore="MergeRootFrame" >

    <fragment android:name="com.kipsap.jshipbattle.JGamePicker$PlaceholderFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/placeHolderFragment"
        android:layout_above="@+id/adFragment"
        tools:layout="@layout/gamepick" />

    <fragment
        android:id="@+id/adFragment"
        android:name="com.kipsap.jshipbattle.JGamePicker$AdFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_ad" />

</RelativeLayout>